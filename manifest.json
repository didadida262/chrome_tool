{
  "name": "Ta-da",
  "description": "zhihu_small_video_down",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
          "http://*/*",
          "https://*/*"
      ],
      "js": ["popup.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "/images/icon.png"
  }
} 